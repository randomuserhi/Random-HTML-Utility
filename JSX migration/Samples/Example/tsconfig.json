{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "target": "ESNext",
    "module": "AMD", // For debugging set to "ESNext"
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react-jsx", // "preserve" to run through a seperate compiler like babel, "react-jsx" to compile with typescript
    "jsxImportSource": "rhu"
  },
  "include": ["./src/**/*", "./types/**/*"],
}