{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "target": "ESNext",
    "module": "AMD",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react-jsx", // or "preserve" to run through babel
    "jsxImportSource": "rhu"
  },
  "include": ["./src/**/*", "./types/**/*"],
}