{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "unused-imports"
    ],
    "rules": {
        "unused-imports/no-unused-imports-ts": "error",
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "no-unused-vars": "off",
        "indent": [
            "error",
            4,
            { "SwitchCase": 0 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": "off"
    }
}
