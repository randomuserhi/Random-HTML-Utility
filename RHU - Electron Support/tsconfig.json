{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build-types",
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [ "node_modules" ] 
}