{ 
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "paths": {
      "*": ["./@types/*"],
    }
  },
  "include": ["./src/**/*"]
}